<div class="text-center">
  <%= link_to (content_tag :div, (content_tag :h1, @chapter.name), class: 'col-6 text-center d-inline-block'),
    chapter_path(@chapter.id) %>
  <%= link_to t('message.edit'), edit_chapter_path(@chapter.id), class: 'btn btn-dark col-2' %>
</div>
<div class="row">
  <%= render partial: 'subsections/subsection', collection: @chapter.subsections %>
</div>
<div>
  <%= render partial: 'blocks/block', collection: @chapter.blocks.order(:number_line) %>
</div>
