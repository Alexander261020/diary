<%= form_for @error, html: { class: "row py-2 bg-dark rounded" } do |f| %>

  <div class="form-group pt-1">
    <%= f.text_field :name, placeholder: 'Error name', class: "mb-2 form-control p-1 pr-2" %>
  </div>

  <div class="form-group pt-1">
    <%= f.text_area :description, placeholder: 'Description', size: "x5", class: "w-100 rounded" %>
  </div>

  <div class="form-group pt-1">
    <%= f.text_area :correct, placeholder: 'Correct', size: "x5", class: "w-100 rounded" %>
  </div>

  <div class="col-2">
    <%= f.submit "create error", class: "w-100 btn btn-primary" %>
  </div>
<% end %>
