<%= form_with(model: cargo_order) do |form| %>
  <% if cargo_order.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cargo_order.errors.count, "error") %> prohibited this cargo_order from being saved:</h2>

      <ul>
        <% cargo_order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :status %>
  <div class="row" style="min-height: 200px;">
    <div class="position-relative col-2 p-0">
      <%= text_field_tag 'customer_id', nil, placeholder: "customer" %>
      <div class="position-absolute bg-light p-1" id="customers_show"
        style="display: none;"></div>
    </div>

    <div class="position-relative col-2 p-0">
      <%= text_field_tag 'town_from_id', nil, placeholder: "town from" %>
      <div class="position-absolute border border-dark bg-light p-1 w-100",
        id="town_from_show",
        style="display: none;"></div>
      <%= hidden_field_tag 'town_from_id_h', nil %>
    </div>

    <div class="position-relative col-2 p-0">
      <%= text_field_tag 'town_in_id', nil, placeholder: "town in" %>
      <div class="position-absolute border border-dark bg-light p-1 w-100",
        id="town_in_show",
        style="display: none;"></div>
      <%= hidden_field_tag 'town_in_id_h', nil %>
    </div>

    <div class="position-relative col-2 p-0">
      <%= text_field_tag 'carrier_id', nil, placeholder: "carrier" %>
      <div class="position-absolute border border-dark bg-light p-1  w-100" id="carriers_show"
        style="display: none; z-index: 1;">
      </div>

      <div class="position-absolute" id="cars_drivers" style="display: none;">
        <div class="position-relative border border-dark bg-light p-1" id="car_show"></div>
        <%= hidden_field_tag 'car_id', nil %>

        <div class="position-relative border border-dark bg-light p-1 pull-right" id="driver_show"></div>
        <%= hidden_field_tag 'driver_id', nil %>
      </div>

    </div>
  </div>
  <div>
    <%= form.submit :submit, class: "btn btn-success" %>
  </div>
<% end %>
