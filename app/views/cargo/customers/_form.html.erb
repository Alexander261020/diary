<%= form_with(model: cargo_customer) do |form| %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :inn, style: "display: block" %>
    <%= form.text_field :inn %>
  </div>

  <div>
    <%= form.label :ogrn, style: "display: block" %>
    <%= form.text_field :ogrn %>
  </div>

  <div>
    <%= form.label :passport, style: "display: block" %>
    <%= form.text_field :passport %>
  </div>

  <div>
    <%= form.label :adress, style: "display: block" %>
    <%= form.text_field :adress %>
  </div>

  <%= render "cargo/contacts/form" %>

  <div>
    <%= form.submit "Update customer", class: "btn btn-success my-2" %>
  </div>
<% end %>
