<div class="text-center">
  <%= link_to (content_tag :div, (content_tag :h1, "#{@subsection.chapter.name}/#{@subsection.name}"), class: 'col-6 text-center d-inline-block'),
    chapter_path(@subsection.chapter.id) %>
  <%= link_to t('message.edit'), edit_subsection_path(@subsection.id), class: 'btn btn-dark col-2' %>
</div>
<% unless @subsection.blocks.empty? %>
  <div>
    <%= render partial: 'blocks/block', collection: @subsection.blocks.order(:number_line) %>
  </div>
<% end %>
